{
  "manifest_version": 3,
  "name": "Arabic-English Translator with Gemini AI",
  "version": "1.0.0",
  "description": "Instant Arabic-English translation on any webpage with AI enhancement",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://lingva.ml/*",
    "https://api.mymemory.translated.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Arabic-English Translator"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Translate selected text"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["gemini-service.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
